{
  "name": "radl-ops",
  "version": "0.5.0",
  "description": "Autonomous AI assistant for managing Radl business operations",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js all",
    "start:cli": "node dist/index.js cli",
    "start:slack": "node dist/index.js slack",
    "start:scheduler": "node dist/index.js scheduler",
    "cli": "tsx src/index.ts cli",
    "slack": "tsx src/index.ts slack",
    "scheduler": "tsx src/index.ts scheduler",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@slack/bolt": "^4.2.0",
    "@slack/web-api": "^7.9.0",
    "@supabase/supabase-js": "^2.49.1",
    "croner": "^9.0.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "node-cron": "^3.0.3",
    "octokit": "^4.1.2",
    "resend": "^4.1.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.13.1",
    "eslint": "^9.19.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
